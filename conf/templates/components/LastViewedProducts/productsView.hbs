{{#if componentData.list}}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <p class="text-center text-uppercase may-like">Last viewed products</p>
                {{#each componentData.list}}
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        {{> catalog/product-thumbnail thumbnail=this index=@index}}
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
{{/if}}